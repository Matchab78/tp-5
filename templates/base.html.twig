        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                <a class="nav-link " href="{{path("app_contacts")}}"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Liste des contacts
                </font></font>
                </a>
                </li>

                <li class="nav-item">
                <a class="nav-link " href="{{path("app_categories")}}"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Liste des catégories
                </font></font>
                </a>
                </li>

            </ul>
        </div>
    </nav>
    <div class="container">
        {% block body %}{% endblock %}
    </div>
